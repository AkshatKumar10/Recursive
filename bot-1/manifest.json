{
  "manifest_version": 3,
  "name": "Consumer Grievance Auto-Fill",
  "version": "1.0.0",
  "description": "Auto-fills consumer grievance forms on government websites",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://consumerhelpline.gov.in/*",
    "https://fcaportal.nic.in/*",
    "http://localhost:5000/*",
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://consumerhelpline.gov.in/user/register-complaint.php",
        "https://consumerhelpline.gov.in/*complaint*",
        "https://fcaportal.nic.in/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Consumer Grievance Helper"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}